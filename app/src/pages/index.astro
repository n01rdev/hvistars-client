---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
---

<Layout title="Bienvenido a H-Vistars">
	<main>
		<ul role="list" class="link-card-grid">
			<Card
				href="https://www.youtube.com/watch?v=dQw4w9WgXcQ"
				title="Inicio"
				body="Aprende a usar Astro"
			/>
			<Card
				href="https://www.youtube.com/watch?v=dQw4w9WgXcQ"
				title="Factores"
				body="Zana es el mejor"
			/>
		</ul>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
	}
	ul{
		list-style: none;
		padding: 0;
		margin: 0;
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}
</style>
